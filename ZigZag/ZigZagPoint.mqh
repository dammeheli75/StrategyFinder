#include <Object.mqh>
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
class ZigZagPoint: public CObject
  {
protected:
   datetime          m_time;
   double            m_price;
   char              m_location;

public:
                     ZigZagPoint(void);
                    ~ZigZagPoint(void);
   void              SetTime(datetime time);
   datetime          GetTime(void);
   void              SetPrice(double price);
   double            GetPrice(void);
   void              SetTop(void);
   void              SetBottom(void);
   bool              IsTop(void);
   bool              IsBottom(void);
  };
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
ZigZagPoint::ZigZagPoint(void)
  {
   m_location=0;
  }
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
ZigZagPoint::~ZigZagPoint(void)
  {
  }
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
ZigZagPoint::SetTime(datetime time)
  {
   m_time=time;
  }
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
datetime ZigZagPoint::GetTime(void)
  {
   return(m_time);
  }
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
ZigZagPoint::SetPrice(double price)
  {
   m_price=price;
  }
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
double ZigZagPoint::GetPrice(void)
  {
   return(m_price);
  }
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
ZigZagPoint::SetTop(void)
  {
   m_location=1;
  }
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
ZigZagPoint::SetBottom(void)
  {
   m_location=-1;
  }
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
bool ZigZagPoint::IsTop(void)
  {
   if(m_location==1) return(true);
   else              return(false);
  }
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
bool ZigZagPoint::IsBottom(void)
  {
   if(m_location==-1) return(true);
   else               return(false);
  }
//+------------------------------------------------------------------+
