class Position : public CObject
  {
protected:
   datetime          m_time;
   char              m_type; // 1: Bán | -1: Mua
public:
                     Position(datetime time,char type); // Setter
                     Position(void); // Getter
                    ~Position(void);
   datetime          GetTime(void);
   char              GetType(void);
  };
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
Position::Position(datetime time,char type)
  {
   m_time = time;
   m_type = type;
  }
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
Position::Position(void)
  {
  }
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
Position::~Position(void)
  {
  }
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
datetime Position::GetTime(void)
  {
   return(m_time);
  }
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
char Position::GetType(void)
  {
   return(m_type);
  }
