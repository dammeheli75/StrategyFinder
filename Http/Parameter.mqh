#include <Object.mqh>
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
class HttpParameter: public CObject
  {
protected:
   string            m_name;
   string            m_value;

public:
                     HttpParameter(void);
                     HttpParameter(string name,string value);
                    ~HttpParameter(void);
   void              Name(string name);
   string            Name(void);
   void              Value(string value);
   string            Value(void);
  };
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
HttpParameter::HttpParameter(void)
  {
  }
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
HttpParameter::HttpParameter(string name,string value)
  {
   this.Name(name);
   this.Value(value);
  }
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
HttpParameter::~HttpParameter(void)
  {
  }
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
void HttpParameter::Name(string name)
  {
   if(StringLen(name)>0)
      m_name=name;
  }
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
string HttpParameter::Name(void)
  {
   if(m_name==NULL) m_name="";

   return m_name;
  }
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
void HttpParameter::Value(string value)
  {
   m_value=value;
  }
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
string HttpParameter::Value(void)
  {
   if(m_value==NULL) m_value="";

   return(m_value);
  }
//+------------------------------------------------------------------+
